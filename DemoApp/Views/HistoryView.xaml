<CommonControls:ViewControl x:Class="DemoApp.Views.HistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DemoApp.Views"
             xmlns:Services="clr-namespace:DemoApp.Services"
             xmlns:Controls="clr-namespace:DemoApp.Controls"
             xmlns:Common="clr-namespace:DemoApp.Common"
             xmlns:CommonControls="clr-namespace:TensorStack.WPF.Controls;assembly=TensorStack.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=local:HistoryView}">
    <Grid>
        <Controls:HistoryControl ItemSource="{Binding HistoryService.HistoryCollection}" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Visible" >
           <Controls:HistoryControl.ItemsPanelTemplate>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="10" IsItemsHost="True"/>
                </ItemsPanelTemplate>
            </Controls:HistoryControl.ItemsPanelTemplate>
        </Controls:HistoryControl>
    </Grid>
</CommonControls:ViewControl>
