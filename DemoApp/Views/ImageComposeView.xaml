<Views:ViewBase x:Class="DemoApp.Views.ImageComposeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:DemoApp.Views"
    xmlns:CommonBehaviors="clr-namespace:TensorStack.WPF.Behaviors;assembly=TensorStack.WPF"
    xmlns:CommonControls="clr-namespace:TensorStack.WPF.Controls;assembly=TensorStack.WPF"
    xmlns:Controls="clr-namespace:DemoApp.Controls"
    xmlns:Views="clr-namespace:DemoApp.Views"
    xmlns:Base="clr-namespace:DemoApp"
    mc:Ignorable="d" 
    d:DesignHeight="450"
    d:DesignWidth="800">
    <Grid DataContext="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:ImageComposeView}}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="360"/>
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>


            <!--***Left Panel***-->
            <Grid Grid.Column="0" >
                <Border Style="{StaticResource BorderPanel}" Margin="4">
                    <DockPanel x:Name="LeftPanelContainer" Margin="4">

                        <!--Execute/Cancel-->
                        <UniformGrid DockPanel.Dock="Bottom" Columns="2" Height="30">
                            <Button Content="Clear" Command="{Binding ClearCommand, ElementName=LayerControl}" />
                            <Button Content="Save" Command="{Binding SaveCommand, ElementName=LayerControl}" />
                        </UniformGrid>

                        <DockPanel>

                            <!--Frame Options-->
                            <UniformGrid DockPanel.Dock="Top" Columns="3">
                                <StackPanel>
                                    <TextBlock Text="Frame Width" Style="{StaticResource FieldTextBlockStyle}" />
                                    <TextBox Text="{Binding FrameWidth, ElementName=LayerControl}" />
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="Frame Height" Style="{StaticResource FieldTextBlockStyle}" />
                                    <TextBox Text="{Binding FrameHeight, ElementName=LayerControl}" />
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="Background" Style="{StaticResource FieldTextBlockStyle}"/>
                                    <CommonControls:ColorPicker SelectedColor="{Binding CanvasColor, Mode=TwoWay, ElementName=LayerControl}"  Height="22" />
                                </StackPanel>
                            </UniformGrid>


                            <!--Layer options-->
                            <DockPanel DockPanel.Dock="Bottom" MinHeight="300">
                                <UniformGrid DockPanel.Dock="Top" Columns="2" Height="24" Margin="0,4">
                                    <Button Content="Add Text Layer" Command="{Binding AddTextCommand, ElementName=LayerControl}" />
                                    <Button Content="Add Image Layer" Command="{Binding AddImageCommand, ElementName=LayerControl}" />
                                </UniformGrid>

                                <StackPanel  DockPanel.Dock="Top" DataContext="{Binding SelectedLayer, ElementName=LayerControl}">

                                    <!--Layer Base-->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="2*" />
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Name" Style="{StaticResource FieldTextBlockStyle}"/>
                                            <TextBox Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                        </StackPanel>
                                        <UniformGrid Grid.Column="1" Columns="4" >
                                            <StackPanel>
                                                <TextBlock Text="Pos X" Style="{StaticResource FieldTextBlockStyle}"/>
                                                <TextBox Text="{Binding PositionX, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                    <i:Interaction.Behaviors>
                                                        <CommonBehaviors:TextBoxMouseIncrementBehavior />
                                                    </i:Interaction.Behaviors>
                                                </TextBox>
                                            </StackPanel>
                                            <StackPanel>
                                                <TextBlock Text="Pos Y" Style="{StaticResource FieldTextBlockStyle}"/>
                                                <TextBox Text="{Binding PositionY, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                                    <i:Interaction.Behaviors>
                                                        <CommonBehaviors:TextBoxMouseIncrementBehavior />
                                                    </i:Interaction.Behaviors>
                                                </TextBox>
                                            </StackPanel>
                                            <StackPanel>
                                                <TextBlock Text="Width" Style="{StaticResource FieldTextBlockStyle}"/>
                                                <TextBox Text="{Binding Width, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" >
                                                    <i:Interaction.Behaviors>
                                                        <CommonBehaviors:TextBoxMouseIncrementBehavior />
                                                    </i:Interaction.Behaviors>
                                                </TextBox>
                                                <StackPanel.Style>
                                                    <Style TargetType="{x:Type StackPanel}">
                                                        <Setter Property="IsEnabled" Value="True"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding CanResize}" Value="False">
                                                                <Setter Property="IsEnabled" Value="False"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </StackPanel.Style>
                                            </StackPanel>
                                            <StackPanel>
                                                <TextBlock Text="Height" Style="{StaticResource FieldTextBlockStyle}"/>
                                                <TextBox Text="{Binding Height, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" >
                                                    <i:Interaction.Behaviors>
                                                        <CommonBehaviors:TextBoxMouseIncrementBehavior />
                                                    </i:Interaction.Behaviors>
                                                </TextBox>
                                                <StackPanel.Style>
                                                    <Style TargetType="{x:Type StackPanel}">
                                                        <Setter Property="IsEnabled" Value="True"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding CanResize}" Value="False">
                                                                <Setter Property="IsEnabled" Value="False"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </StackPanel.Style>
                                            </StackPanel>
                                        </UniformGrid>
                                    </Grid>
                                    <CommonControls:SliderControl Text="Rotation" Value="{Binding Rotation, Mode=TwoWay}" TickFrequency="1" Minimum="0" Maximum="360" ValuePostFix="°"/>
                                    <StackPanel.Style>
                                        <Style TargetType="{x:Type StackPanel}">
                                            <Setter Property="IsEnabled" Value="True"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedLayer, ElementName=LayerControl}" Value="{x:Null}">
                                                    <Setter Property="IsEnabled" Value="False"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                </StackPanel>

                                <ContentControl Content="{Binding SelectedLayer, ElementName=LayerControl}">
                                    <ContentControl.Resources>

                                        <!-- ImageLayer -->
                                        <DataTemplate DataType="{x:Type Controls:ImageLayer}">
                                            <StackPanel>
                                                <UniformGrid Columns="4">
                                                    <StackPanel>
                                                        <TextBlock Text="Stretch" Style="{StaticResource FieldTextBlockStyle}"/>
                                                        <ComboBox ItemsSource="{Binding Source={StaticResource Stretch}}" SelectedItem="{Binding Stretch}"/>
                                                    </StackPanel>
                                                </UniformGrid>
                                            </StackPanel>
                                        </DataTemplate>

                                        <!-- TextLayer -->
                                        <DataTemplate DataType="{x:Type Controls:TextLayer}">
                                            <StackPanel>
                                                <StackPanel>
                                                    <TextBlock Text="Text" Style="{StaticResource FieldTextBlockStyle}"/>
                                                    <TextBox Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}" Height="40" TextWrapping="Wrap" AcceptsReturn="True" />
                                                </StackPanel>

                                                <UniformGrid Columns="4">
                                                    <StackPanel>
                                                        <TextBlock Text="Font" Style="{StaticResource FieldTextBlockStyle}"/>
                                                        <ComboBox ItemsSource="{Binding Source={x:Static Base:FontOptions.FontFamilies}}" SelectedItem="{Binding FontFamily}"/>
                                                    </StackPanel>
                                                    <StackPanel>
                                                        <TextBlock Text="Size" Style="{StaticResource FieldTextBlockStyle}"/>
                                                        <TextBox Text="{Binding FontSize, UpdateSourceTrigger=PropertyChanged}">
                                                            <i:Interaction.Behaviors>
                                                                <CommonBehaviors:TextBoxMouseIncrementBehavior />
                                                            </i:Interaction.Behaviors>
                                                        </TextBox>
                                                    </StackPanel>
                                                    <StackPanel>
                                                        <TextBlock Text="Style" Style="{StaticResource FieldTextBlockStyle}"/>
                                                        <ComboBox ItemsSource="{Binding Source={x:Static Base:FontOptions.FontStyleList}}" SelectedItem="{Binding FontStyle}"/>
                                                    </StackPanel>
                                                    <StackPanel>
                                                        <TextBlock Text="Weight" Style="{StaticResource FieldTextBlockStyle}"/>
                                                        <ComboBox ItemsSource="{Binding Source={x:Static Base:FontOptions.FontWeightList}}" SelectedItem="{Binding FontWeight}"/>
                                                    </StackPanel>
                                                    <StackPanel>
                                                        <TextBlock Text="Color" Style="{StaticResource FieldTextBlockStyle}"/>
                                                        <CommonControls:ColorPicker SelectedColor="{Binding Color, Mode=TwoWay}"  Height="22" />
                                                    </StackPanel>
                                                </UniformGrid>
                                            </StackPanel>
                                        </DataTemplate>

                                    </ContentControl.Resources>
                                    <ContentControl.Style>
                                        <Style TargetType="{x:Type ContentControl}">
                                            <Setter Property="IsEnabled" Value="True"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedLayer, ElementName=LayerControl}" Value="{x:Null}">
                                                    <Setter Property="IsEnabled" Value="False"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ContentControl.Style>
                                </ContentControl>


                            </DockPanel>


                            <!--Layers-->
                            <DockPanel>
                                <TextBlock DockPanel.Dock="Top" Text="Layers" Style="{StaticResource FieldTextBlockStyle}" Margin="0, 10, 0, 0"/>
                                <ListBox 
                                    ItemsSource="{Binding Layers, ElementName=LayerControl}" 
                                    SelectedItem="{Binding SelectedLayer, ElementName=LayerControl}" 
                                    HorizontalContentAlignment="Stretch">
                                    <ListBox.Resources>

                                        <DataTemplate  DataType="{x:Type Controls:ImageLayer}">
                                            <DockPanel >
                                                <CommonControls:TransparentImageElement DockPanel.Dock="Left" Source="{Binding Image}" Stretch="Uniform" Width="28" Height="28" Margin="0,2,0,2" />
                                                <UniformGrid DockPanel.Dock="Right" Columns="5" Height="22" Width="110">
                                                    <CommonControls:ToggleButton IsChecked="{Binding IsVisible, Mode=TwoWay}" SizeTrue="14" SizeFalse="14"  IconTrue="&#xf06e;" IconFalse="&#xf070;" ColorTrue="{StaticResource DefaultForeground}"  ColorFalse="{StaticResource DefaultForeground}"  />
                                                    <Button  CommandParameter="{Binding}" Command="{Binding LayerCopyCommand, ElementName=LayerControl}">
                                                        <CommonControls:FontAwesome Icon="&#xf0c5;" Size="14"/>
                                                    </Button>
                                                    <Button CommandParameter="{Binding}" Command="{Binding LayerUpCommand, ElementName=LayerControl}" >
                                                        <CommonControls:FontAwesome Icon="&#xf357;" Size="14"/>
                                                    </Button>
                                                    <Button CommandParameter="{Binding}" Command="{Binding LayerDownCommand, ElementName=LayerControl}" >
                                                        <CommonControls:FontAwesome Icon="&#xf354;" Size="14"/>
                                                    </Button>
                                                    <Button CommandParameter="{Binding}" Command="{Binding LayerRemoveCommand, ElementName=LayerControl}" >
                                                        <CommonControls:FontAwesome Icon="&#xf00d;" Size="14"/>
                                                    </Button>
                                                </UniformGrid>
                                                <StackPanel Margin="5,1,0,0">
                                                    <TextBlock Text="{Binding Name}"  FontSize="12" />
                                                    <TextBlock Text="Image"  FontSize="8" Opacity=".6" />
                                                </StackPanel>
                                            </DockPanel>
                                        </DataTemplate>

                                        <DataTemplate  DataType="{x:Type Controls:TextLayer}">
                                            <DockPanel >
                                                <Border DockPanel.Dock="Left" Width="28" Height="28" BorderThickness="1" BorderBrush="{StaticResource ContainerBorder}" Margin="0,2,0,2" >
                                                    <CommonControls:FontAwesome Icon="&#xf893;" IconStyle="Solid" Size="18"/>
                                                </Border>
                                                <UniformGrid DockPanel.Dock="Right" Columns="5" Height="22" Width="110" >
                                                    <CommonControls:ToggleButton IsChecked="{Binding IsVisible, Mode=TwoWay}" SizeTrue="14" SizeFalse="14" IconTrue="&#xf06e;" IconFalse="&#xf070;" ColorTrue="{StaticResource DefaultForeground}"  ColorFalse="{StaticResource DefaultForeground}" />
                                                    <Button  CommandParameter="{Binding}" Command="{Binding LayerCopyCommand, ElementName=LayerControl}">
                                                        <CommonControls:FontAwesome Icon="&#xf0c5;" Size="14"/>
                                                    </Button>
                                                    <Button  CommandParameter="{Binding}" Command="{Binding LayerUpCommand, ElementName=LayerControl}">
                                                        <CommonControls:FontAwesome Icon="&#xf357;" Size="14"/>
                                                    </Button>
                                                    <Button CommandParameter="{Binding}" Command="{Binding LayerDownCommand, ElementName=LayerControl}">
                                                        <CommonControls:FontAwesome Icon="&#xf354;" Size="14"/>
                                                    </Button>
                                                    <Button CommandParameter="{Binding}" Command="{Binding LayerRemoveCommand, ElementName=LayerControl}">
                                                        <CommonControls:FontAwesome Icon="&#xf00d;" Size="14"/>
                                                    </Button>
                                                </UniformGrid>
                                                <StackPanel Margin="5,1,0,0">
                                                    <TextBlock Text="{Binding Name}"  FontSize="12" />
                                                    <TextBlock Text="Text"  FontSize="8" Opacity=".6" />
                                                </StackPanel>
                                            </DockPanel>
                                        </DataTemplate>

                                    </ListBox.Resources>
                                </ListBox>
                            </DockPanel>

                        </DockPanel>
                    </DockPanel>
                </Border>
            </Grid>


            <!--GridSplitter-->
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Width="5" Opacity=".4" Margin="0,20" />


            <!--***Middle Panel***-->
            <Grid Grid.Column="2" Grid.Row="0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="7*" />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="0" />
                </Grid.ColumnDefinitions>


                <!--Content-->
                <Grid Grid.Column="0"  >
                    <Border Style="{StaticResource BorderPanel}" Margin="4">
                        <Border Margin="4" Style="{StaticResource ImageDropZoneStyle}">
                            <Grid Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <Controls:LayerControl x:Name="LayerControl" ImageGenerated="LayerControl_ImageGenerated" />
                            </Grid>
                        </Border>
                    </Border>
                </Grid>


                <!--GridSplitter-->
                <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Width="5" Opacity=".4" Margin="0,20"/>


                <!--***Right Panel***-->
                <Grid Grid.Column="2" >
                    <Border Style="{StaticResource BorderPanel}" Margin="4">
                        <!--Debug Panel-->
                        <StackPanel DockPanel.Dock="Bottom" Margin="4">
                            <TextBlock Text="{Binding IsDragDrop, StringFormat={}IsDragDrop: {0}}" />
                            <TextBlock Text="{Binding DragDropType, StringFormat={}DragDropType: {0}}" />
                        </StackPanel>
                    </Border>
                </Grid>

            </Grid>
        </Grid>

    </Grid>
</Views:ViewBase>
